<Window x:Class="LevelEditor.View.BrushWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelEditor.View"
        mc:Ignorable="d"
        Title="Tiles" SizeChanged="Window_SizeChanged" Height="364.499" Width="107.396" Topmost="True" WindowStyle="ToolWindow">
    <DockPanel>
        
        <ScrollViewer DockPanel.Dock="Right">
            <ScrollViewer.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowFrameColorKey}}"/>
            </ScrollViewer.Background>
            <WrapPanel Name="wrap"></WrapPanel>
            
        </ScrollViewer>
        <Canvas Name="brushCanvas" Visibility="Collapsed" ></Canvas>
    </DockPanel>
</Window>
